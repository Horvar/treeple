include ../../partials/mixins
    
doctype html
html(lang='RU')
    include ../../partials/head
    +head('Туры - список')
    body.body
        .body__wrapper(style='opacity:0; overflow:hidden')
    
            +header('body__header')
    
            main.body__main.main
                section.main__intro.intro.intro--bg-2.intro--shortest.m-60-30
                    .intro__container.container-1(data-screen-height='540')
                        .intro__wrapper.intro__wrapper--3
                            h1.intro__title.intro__title--2.title-huge.m-60-30 Поиск туров и&nbsp;приключений
                            nav.intro-search__sort-variations.sort-variations.hide-M
                                ul.sort-variations__list
                                    li.sort-variations__item
                                        a.sort-variations__link-wrapper.text-bold.is-current Многодневные
                                    li.sort-variations__item
                                        a.sort-variations__link-wrapper.text-bold Однодневые
                                    li.sort-variations__item
                                        a.sort-variations__link-wrapper.text-bold Необычные
                                    li.sort-variations__item
                                        a.sort-variations__link-wrapper.text-bold Индивидуальные
                            .intro__search.intro__search--2.intro-search
                                .intro-search__select.intro-search-select
                                    svg.intro-search-select__svg-icon
                                        use(href='assets/svg/sprite.svg#flag')
                                    select(name='place' data-placeholder='Куда вы хотите?' data-select-main)
                                        option
                                        option(value="1") Абай
                                        option(value="2") Акколь
                                        option(value="3") Аксай
                                        option(value="4") Аксу
                                        option(value="5") Актау
                                        option(value="6") Актобе
                                        option(value="7") Алга
                                        option(value="8") Алматы
                                    .intro-search-select__dropdown
                            
                                .intro-search__datepicker.intro-search-datepicker.text-lead(id='datepickerMain')
                                    output Даты
                                    svg.intro-search-select__svg-icon
                                        use(href='assets/svg/sprite.svg#calendar')

            .main__row.container-1.m-120-60
                    .main__col.main__col--2
                        .main__filter.filter
                            .filter__folder.filter-folder
                            .filter-folder__heading(data-folder-trigger)
                                svg.filter-folder__svg-icon
                                    use(href='assets/svg/sprite.svg#filter')
                                h2.filter-folder__title.title-special Фильтры
                                svg.filter-folder__svg-angle
                                    use(href='assets/svg/sprite.svg#angle1')
                            .filter-folder__content(data-folder-content)
                                ul.filter-folder__list
                                    li.filter-folder__item.filter-folder-sub
                                        .filter-folder-sub__heading(data-folder-trigger)
                                            svg.filter-folder-sub__svg-angle
                                                use(href='assets/svg/sprite.svg#angle1')
                                            h3.filter-folder-sub__title.text-small Цена
                                        .filter-folder-sub__content(data-folder-content)
                                            .filter-folder-sub__wrapper
                                                .filter__range.filter-range
                                                    .filter-range__slider(id="priceRangeSlider" data-min='1000' data-max='10000')
                                                .filter-range__output
                                                    output
                                                        span.text-small от
                                                        span.text-common(id="priceRangeStart")
                                                    output
                                                        span.text-small до
                                                        span.text-common(id="priceRangeEnd")
                                    li.filter-folder__item.filter-folder-sub
                                        .filter-folder-sub__heading(data-folder-trigger)
                                            svg.filter-folder-sub__svg-angle
                                                use(href='assets/svg/sprite.svg#angle1')
                                            h3.filter-folder-sub__title.text-small Продолжительность
                                        .filter-folder-sub__content(data-folder-content)
                                            .filter-folder-sub__wrapper
                                                ul.filter__check-list
